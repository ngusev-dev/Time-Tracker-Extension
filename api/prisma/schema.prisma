generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @default(autoincrement()) @id
  email String @unique
  password String
  firstName String
  lastName String
  middleName String?
  login String
  createdAt DateTime @default(now())

  userTimer UserTimer?
  timerHistory TimerHistory[]

  @@map("users")
}

model UserTimer {
  id Int @default(autoincrement()) @id
  timerId String @default(uuid()) @db.Uuid @unique

  startTimer DateTime?
  endTimer DateTime?
  totalTimeInSeconds Float @default(0)
  status TimerStatus @default(NEW)
  description String?

  user User @relation(fields: [userId], references: [id])
  userId Int  @unique

  @@map("userTimers")
}

model TimerHistory {
  id Int @default(autoincrement()) @id
  timerId String @db.Uuid

  startTimer DateTime
  endTimer DateTime
  totalTimeInSeconds Float
  description String?

  user User @relation(fields: [userId], references: [id])
  userId Int

  @@map("timerHistories")
}

enum TimerStatus {
  NEW
  WORKING
  PAUSE
}
